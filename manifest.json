{
  "name": "CF Fusion",
  "version": "1.0",
  "description": "Upgrade your ClickFunnels editor!",
  "permissions": ["activeTab", "declarativeContent", "storage","tabs", "http://*.clickfunnels.com/pages/*"],
  "background": {
    "scripts": ["main.js"],
    "persistent": true
  },
  "options_page": "options.html",
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    }
  },
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "content_scripts": [{
    "matches": ["https://*.clickfunnels.com/pages/*"],
    "js": ["content_script.js"]
  }],
  "manifest_version": 2
}
